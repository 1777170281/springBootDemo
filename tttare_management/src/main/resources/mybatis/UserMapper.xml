    <select id="listAllUser"  resultType="User">
        select * from sys_user
    </select>

    <select id="findByUserName"  resultType="User"  parameterType="string">
        select * from sys_user where username=#{userName}
    </select>

    <select id="countByCondition"  resultType="int"  parameterType="map">
        select count(*) from sys_user where 1=1
            <if test="email != null">
                and email=#{email}
            </if>
            <if test="userName != null">
                and username=#{userName}
            </if>

    </select>

    <insert id="addUser" parameterType="User">
        insert into sys_user(
            userid,username,nickname,password,salt,state,createDate,expiredDate,email
        )values (
            #{userId},#{userName},#{nickName},#{password},#{salt},#{state},#{createDate},#{expiredDate},#{email}
        )
    </insert>

</mapper>